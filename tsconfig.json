{
    "compilerOptions": {
        "strict": true,
        "allowJs": true, /* Allow javascript files to be compiled. */
        "declaration": true,
        // "declarationDir": "dist/types",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "newLine": "lf",
        "types": [
            "node",
            "vue"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": [
                    "*"
                ]
            }
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ]
}
